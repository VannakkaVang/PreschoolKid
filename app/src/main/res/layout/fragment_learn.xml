<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <LinearLayout
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/background">


        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="20dp">
        </View>

        <TextView

            android:id="@+id/txtTitleSubHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Preschool Kids Learning"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:textStyle="bold" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="20dp">
        </View>

        <ImageView
            android:id="@+id/imgSetting"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_setting" />


    </LinearLayout>


      <LinearLayout
          android:paddingVertical="10dp"
            android:paddingHorizontal="35dp"
          android:layout_marginTop="90dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/imgABC"
              android:src="@drawable/home_alphabet"
              android:layout_width="150dp"
              android:layout_height="150dp"/>
          <View
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="20dp">
          </View>
          <ImageView
              android:id="@+id/imgNumberEnglish"
              android:layout_width="150dp"
              android:layout_height="150dp"
              android:src="@drawable/home_number"/>
      </LinearLayout>


    <LinearLayout
        android:paddingVertical="10dp"
        android:paddingHorizontal="35dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/home_khmer_alphabet"
            android:layout_width="150dp"
            android:layout_height="170dp"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="20dp">
        </View>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:src="@drawable/home_khmer_number"/>
    </LinearLayout>




</LinearLayout>